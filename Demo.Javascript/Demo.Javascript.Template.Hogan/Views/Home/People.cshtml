	//		{ "FirstName": "Mike", "LastName": "Durden" },
	//		{ "FirstName": "Marilin", "LastName": "Monroe" }
	//	]
	//};
	var html = $("#peopleTemplate").html();
	var template = Hogan.compile(html);
	var rendered = template.render(data);
	$("#main").html(rendered);
</script>
