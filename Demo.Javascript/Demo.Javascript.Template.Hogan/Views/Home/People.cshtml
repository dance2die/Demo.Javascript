@using System.Web.Helpers
@using Demo.Javascript.Template.Hogan.Models
@model System.Collections.Generic.List<Person>

@{
	ViewBag.Title = "People";
}

<h2>People</h2>


<script id="peopleTemplate" type="text/html" class="template">
	<div>
		<table>
			<thead>
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
				</tr>
			</thead>
			<tbody>
				{{#people}}
				<tr>
					<td>{{FirstName}}</td>
					<td>{{LastName}}</td>
				</tr>
				{{/people}}
			</tbody>
		</table>
	</div>
</script>





<div id="main"></div>

<script language="javascript">
	debugger;
	var data = { "people" : @Html.Raw(Json.Encode(@Model)) };
